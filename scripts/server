#!/bin/bash

if [[ "${1-}" == "--port" ]]; then
    shift
    port="$1"
    shift
else
    port=50505
fi

if [[ "$1" == "--wait" ]]; then
    exec java -Dclojure.server.myrepl="{:port $port,:accept,clojure.core.server/repl}" -jar ~/.m2/repository/org/clojure/clojure/1.9.0-alpha17/clojure-1.9.0-alpha17.jar -e '(.join (Thread/currentThread))'
else
    exec java -Dclojure.server.myrepl="{:port $port,:accept,clojure.core.server/repl}" -jar ~/.m2/repository/org/clojure/clojure/1.9.0-alpha17/clojure-1.9.0-alpha17.jar "$@"
fi
